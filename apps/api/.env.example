# API - Environment Variables
# Copy this file to .env.dev and customize values

APP_ENV=dev
API_PREFIX=/api/v1

# ========================================
# OpenAI
# ========================================
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_VERSION=2025-01-01-preview
OPENAI_API_TYPE=openai
OPENAI_API_BASE=https://your-endpoint.openai.com/
OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
OPENAI_ENDPOINT=https://your-endpoint.openai.com/

# ========================================
# PostgreSQL
# ========================================
POSTGRES_DB_URL=postgresql+asyncpg://admin:your_password@rs_postgres:5432/realestate
POSTGRES_DB=realestate
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_password
DB_PORT=5434
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ========================================
# MongoDB
# ========================================
MONGODB_URI=mongodb://admin:your_password@rs_mongo:27017/test?authSource=admin
MONGO_HOST=rs_mongo
MONGO_PORT=27017
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your_password
MONGO_INITDB_DATABASE=test

# ========================================
# Redis
# ========================================
REDIS_DB=test
REDIS_PORT=6379
REDIS_HOST=rs_redis
REDIS_PASSWORD=your_password

# ========================================
# JWT Authentication
# ========================================
JWT_SECRET=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# ========================================
# CORS
# ========================================
ALLOW_ORIGINS='*'
ALLOW_CREDENTIALS=True
ALLOW_METHODS='*'
ALLOW_HEADERS='*'

# ========================================
# HTTP Client
# ========================================
CLIENT_TIME_OUT=5
SIZE_POOL_HTTPX=100

# ========================================
# Langfuse (LLM Observability)
# ========================================
LANGFUSE_HOST=http://rs_langfuse:3000
LANGFUSE_PUBLIC_KEY=pk-lf-xxx
LANGFUSE_SECRET_KEY=sk-lf-xxx
